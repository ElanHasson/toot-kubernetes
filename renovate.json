{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": [
      "argocd/applications/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "matchPackagePatterns": [
        "*",
        "!cloudnative-pg",
        "!ghcr.io/mastodon/mastodon",
        "!asonix/relay"
      ]
    }
  ]
}
